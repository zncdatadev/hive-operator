root = true

[*]
charset = utf-8
max_line_length = 120

[*.proto]
indent_size = 2
tab_width = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.go,*.go2}]
indent_style = tab

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.prettierrc,.stylelintrc,bowerrc,jest.config}]
indent_size = 2

[{*.hcl,*.nomad}]
indent_size = 2

[{*.http,*.rest}]
indent_size = 0

[{*.pb,*.textproto}]
indent_size = 2
tab_width = 2

[{*.tf,*.tfvars}]
indent_size = 2

[{*.yaml,*.yml}]
indent_size = 2